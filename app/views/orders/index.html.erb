<h1>All Orders listings</h1>

<table>
	<tr>
		<th>Order Id</th>
		<th>Kopi Order</th>
		<th>Weight</th>
		<th>Sale</th>
	</tr>

	<% @orders.each do |order| %>
		<tr>
			<td><%= order.id %></td>
			<td><%= order.kopi.name %></td>
			<td><%= order.weight %></td>
			<td><%= order.sale %></td>
			<td><%= link_to 'Show', order_path(order) %></td>
			<td><%= link_to 'Edit', edit_order_path(order) %></td>
			<td><%= link_to "Delete", @order, :confirm => "Are you sure?", :method => :delete %></td>
		</tr>
	<% end %>
</table>

<%= link_to 'Add New Order', new_order_path %>